<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" horizontalAlign="center"

    verticalGap="0" borderStyle="none" backgroundColor="white" >

    <mx:Panel title="VideoDisplay Control Example" height="100%" width="100%" 
        horizontalAlign="center" 
        paddingTop="10" paddingLeft="10" paddingRight="10" paddingBottom="10">

           
        <mx:VideoDisplay id="myVid" height="158" width="211" source="{data.filename}" autoPlay="false"/>

        <mx:HBox>
            <mx:Button label="Play" click="myVid.play();"/>
            <mx:Button label="Pause" click="myVid.pause();"/>
            <mx:Button label="Stop" click="myVid.stop();"/>
        </mx:HBox>

    </mx:Panel>
</mx:VBox>